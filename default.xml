<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Default settings for all repositories -->
  <default revision="main" 
           remote="github"
           sync-j="4" />

  <!-- Define the remote source -->
  <remote name="github"
          fetch="https://github.com/Demo-CI/" />

  <!-- Project repositories -->
  <project name="application"
           path="application"
           remote="github"
           revision="main">
    <annotation name="description" value="Main C++ calculator application with external library dependencies" />
    <annotation name="type" value="application" />
    <annotation name="language" value="cpp" />
  </project>

  <project name="static_library" 
           path="libs/calculator"
           remote="github"
           revision="main">
    <annotation name="description" value="C++ static library providing calculator and math utilities" />
    <annotation name="type" value="library" />
    <annotation name="language" value="cpp" />
  </project>

  <!-- Build and toolchain repository (future) -->
  <project name="build"
           path="build"
           remote="github"
           revision="main">
    <annotation name="description" value="Build system and CI/CD workflows" />
    <annotation name="type" value="build" />
  </project>

  <project name="toolchain"
           path="toolchain"
           remote="github"
           revision="main">
    <annotation name="description" value="Development toolchain and build tools" />
    <annotation name="type" value="toolchain" />
  </project>
</manifest>
